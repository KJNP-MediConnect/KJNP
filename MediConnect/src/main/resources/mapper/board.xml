<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.KJNP.MediConnect.biz.board.BoardDAO">
	<insert id="insert">
		INSERT INTO 
			BOARD(
			TITLE,
			CONTENT,
			TIME)
			 VALUES(
			 #{title},
			 #{content},
			 NOW())
	</insert>
	
	<select id="selectAll">
		SELECT * FROM BOARD
	</select>
	
	<select id="selectOne">
		SELECT * FROM BOARD WHERE TITLE=#{title}
	</select>
	
	<delete id="delete">
		DELETE FROM BOARD WHERE TITLE=#{title}
	</delete>
	
	<update id="update">
		UPDATE BOARD SET CONTENT=#{content} WHERE TITLE=#{title}
	</update>
</mapper>